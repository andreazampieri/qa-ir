{
    "embeddings":"glove",
    "train_as":"classifier",
    "parser":"text",
    "model":{
        "name":"base-cnn",
        "params":{
            "static_emb": true,
            "hidden_size": 300,
            "pad_idx":0,
            "qcnn":{
                "conv_size": 700,
                "window":[5],
                "activation":"relu"
            },
            "acnn":{
                "conv_size": 700,
                "window":[5],
                "activation":"relu"
            }
        }

    },
    "seed": 123,
    "patience": 8,
    "batch_size": 50,
    "optimizer":{
        "name":"Adam",
        "params":{
            "lr":0.002
        }
    }
}
